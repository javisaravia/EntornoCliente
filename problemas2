//Realiza un script que convierta datos de texto a número usando parseInt y parseFloat. Controla el caso de NaN.

let textEntero = "42"
let textoDecimal = "3.14";
let textoNumero = "Hola";

let entero = parseInt(textEntero);
if (isNaN(entero)) {
    console.log("No es un número válido");
} else {
    console.log("Número entero:", entero);
}

let decimal = parseFloat(textoDecimal);
if (isNaN(decimal)) {
    console.log("No es un número válido");
} else {
    console.log("Número decimal:", decimal);
}

let resultado = parseFloat(textoNumero);
if (isNaN(resultado)) {
    console.log("No es un número válido");
} else {
    console.log("Número:", resultado);
}

