
//declaramos una variable

let valor = 1;

//convertimos a numero 
let numero= Number(valor);

//convertimos a booleano
let booleano= Boolean(valor);

//convertimos a texto
let texto= String(valor);


console.log(typeof valor, valor);       // string "1"
console.log(typeof numero, numero);     // number 1
console.log(typeof texto, texto);       // string "1"
console.log(typeof booleano, booleano); // boolean true



